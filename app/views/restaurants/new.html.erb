<h2>Add a Restaurant</h2>

<%= form_for :restaurant, url: restaurants_path do |x| %>
<%= x.label :name %>
<%= x.text_field :name %>
<br/>
<%= x.label :rating %>
  <% 5.times do |q| %> 
    <%= x.label :rating, q+1 %>
    <%= x.radio_button(:rating, q+1) %>
  <% end %>
  <br/>
  <%= x.submit :add %>
<% end %>