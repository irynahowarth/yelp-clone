<h1>All of our Restaurants</h1>

<%= link_to 'Add new restaurant', new_restaurant_path %>

<table>
  <tr>
  <th>Name</th>
  <th>Rating</th>
  <th></th>
  </tr>

  <% @restaurants.each do |restaurant| %>
  <tr>
    <td><%= restaurant.name %></td>
    <td><%= restaurant.rating %></td>
    <td>
      <%= link_to 'Show', restaurant_path(restaurant) %>
      <%= link_to 'Edit', edit_restaurant_path(restaurant) %>
      <%= link_to 'Delete', restaurant_path(restaurant),
                            method: :delete,
                            data: { confirm: 'Are you sure about deleting?'} %>
    </td>
  </tr>
  <% end %>
</table>