<% if @review.errors.any? %>
	<h2> <%= pluralize(@review.errors.count, "error") %> not allowed to be saved: </h2>
	<ul> 
			<% @review.errors.full_messages.each do |message| %>
			<li> <%= message %> </li>
			<% end %>
	</ul>		 
	<% end %> 

<%= form_for [@restaurant, @review] do |f| %>
  <%= f.label :thoughts %>
  <%= f.text_area :thoughts %>
  <%= f.label :rating %>
  <%= f.select :rating, (0..5) %>
  <%= f.submit 'Leave Review' %>
<% end %>